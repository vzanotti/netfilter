\mode<presentation>

% Gestion des couleurs 
\definecolor{noir}{RGB}{0,0,0}
\definecolor{fond}{RGB}{255,255,255}
\definecolor{rouge}{RGB}{198,0,0}
\definecolor{bleuc}{RGB}{192,208,229}
\definecolor{bleuf}{RGB}{107,129,178}

\setbeamercolor{structure}{fg=noir,bg=fond}
\setbeamercolor{titlelike}{use=structure,fg=rouge,bg=fond}
\setbeamercolor{title}{use=structure,fg=rouge,bg=bleuc}
\setbeamercolor{block title}{fg=noir,bg=bleuf}
\setbeamercolor{block title alerted}{use=alerted text,fg=noir,bg=alerted text.fg!25!bg}
\setbeamercolor{block title example}{use=example text,fg=noir,bg=example text.fg!25!bg}
\setbeamercolor{block body}{parent=normal text,use=block title,bg=bleuc}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=bleuc}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=bleuc}
\setbeamercolor{barhead}{fg=bleuf,bg=bleuf}
\setbeamercolor{normal text}{fg=noir,bg=fond}
\setbeamercolor{alerted text}{fg=rouge,bg=fond}
\setbeamercolor{background canvas}{parent=normal text}
\setbeamercolor{background}{parent=background canvas}

\mode
<all>
